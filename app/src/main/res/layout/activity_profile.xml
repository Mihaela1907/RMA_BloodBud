<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ProfileActivity"
    android:padding="15dp"
    android:background="@drawable/app_back3">

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dobrodošli!"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:id="@+id/profile_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spol"
        android:textSize="30sp"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/profile_birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Datum rođenja"
        android:textSize="30sp"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/profile_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Težina"
        android:textSize="30sp"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/profile_bloodGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Krvna grupa"
        android:textSize="30sp"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Uredi"
        android:alpha="0.7"
        android:background="@drawable/custombtn"
        android:layout_marginTop="10dp"/>

</LinearLayout>